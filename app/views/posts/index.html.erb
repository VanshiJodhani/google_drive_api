<h1>Post</h1>
<table>
  <thead>
    <th>Title</th>
    <th>Body</th>
    <th>Image</th>
    <th>Edit</th>
    <th>Delete</th>
  </thead>
  <tbody>
  <% @posts .each do |p| %>
    <tr>
      <td><%= p.title %></td>
      <td><%= p.body %></td>
      <td><%= image_tag(p.image, title: p.image.filename) if p.image.present? %></td>
      <td><%= link_to "Edit", edit_post_path(p) %></td>
      <td><%= link_to "Destroy", post_path(p), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
      } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to "New post", new_post_path %><br>
<%= link_to "Home", home_path %>
